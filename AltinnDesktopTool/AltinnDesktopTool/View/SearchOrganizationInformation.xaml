<UserControl x:Class="AltinnDesktopTool.View.SearchOrganizationInformation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400"
              DataContext="{Binding SearchOrganizationInformationViewModel, Source={StaticResource ViewModelLocator}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Stretch" DataContext="{Binding Model.SearchText, Mode=OneWayToSource}">Test</TextBox>
        <Button Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Right">Search</Button>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal">
            <RadioButton GroupName="SearchType" Content="Phone number" IsChecked="True"/>
            <RadioButton GroupName="SearchType" Content="Email address" />
            <RadioButton GroupName="SearchType" Content="Organisation number" />
        </StackPanel>
    </Grid>
</UserControl>
