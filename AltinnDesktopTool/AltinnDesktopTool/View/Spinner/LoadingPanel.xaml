<UserControl x:Class="AltinnDesktopTool.View.Spinner.LoadingPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:spinner="clr-namespace:AltinnDesktopTool.View.Spinner">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="bool2visibility" />

        <LinearGradientBrush x:Key="panelBackground" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="1" />
            <GradientStop Color="#FF1B1B1B" />
        </LinearGradientBrush>
    </UserControl.Resources>
    <spinner:CircularProgressBar x:Name="progressBar" />
</UserControl>